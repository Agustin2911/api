package com.uade.tpo.E_Commerce.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.PageRequest;
import org.springframework.stereotype.Service;

import com.uade.tpo.E_Commerce.service.CategoryService;
import com.uade.tpo.E_Commerce.entity.Category;


@Service
public class CategoryServiceImpl implements CategoryService{

    @Autowired
    private CategoryRepository categoryRepository;


    public Page<Category> getCategories(PageRequest pageable){
        return categoryRepository.findAll(pageable);
    }

    public Optional<Category> getCategoryById(Long id_category){
        return categoryRepository.findById(id_category);
    }

    public Category createCategory(String name_category) { //throws DuplicateException 
        List<Category> categories = categoryRepository.findByName(name_category);
        if (categories.isEmpty()){
            return categoryRepository.save(new Category(name_category));
        } else {
            return; 
            //throw new CategoryDuplicateException();
        }
    }

    public void deleteCategory (String name_category) { //throws NotFoundException  
        List<Category> categories = categoryRepository.findByName(name_category);
        if (categories.isEmpty()){
            return;
            //throw new CategoryNotFoundException();
        }
        categoryRepository.deleteByName(name_category);
    }

}